{
  "extends": "@neuvernetzung/tsconfig/base.json",
  "include": ["./**/*.ts", "./**/*.tsx", "./src/**/*ts", "./src/**/*tsx"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "incremental": false
  }
}
